<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
<div class="row">
    <div class="col-md-2" style="margin: 20px 5px">
        <a href="/categoria/novo" class="btn btn-primary"><i class="fas fa-plus"></i> Adicionar nova Catagoria</a>
    </div>
    <div class="col-md-8">
        <Table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nome da Categoria</td>
                    <td width="100">Ações</td>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach(categoria => { %>
                    <tr>
                        <td>
                            <%= categoria.categoria %> 
                        </td>
                        <td class="text-center">
                            <a href="/categoria/excluir/<%= categoria.id %>"><i class="fas fa-trash-alt"></i></a> | 
                            <a href="/categoria/editar/<%= categoria.id %>"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </Table>
    </div>
</div> 